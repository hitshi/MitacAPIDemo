<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LedServiceActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Led Service API list:"/>

                <Spinner android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_led"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:orientation="horizontal"
                >
                <RadioGroup
                    android:id="@+id/led_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp">

                    <RadioButton
                        android:id="@+id/rb_RED_ON_NORMAL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="RED_ON_NORMAL" />

                    <RadioButton
                        android:id="@+id/rb_RED_OFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RED_OFF" />

                    <RadioButton
                        android:id="@+id/rb_RED_BLINK_SHORT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RED_BLINK_SHORT" />

                    <RadioButton
                        android:id="@+id/rb_RED_BLINK_LOOP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RED_BLINK_LOOP" />

                    <RadioButton
                        android:id="@+id/rb_GREEN_ON_NORMAL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GREEN_ON_NORMAL" />

                    <RadioButton
                        android:id="@+id/rb_GREEN_OFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GREEN_OFF" />

                    <RadioButton
                        android:id="@+id/rb_GREEN_BLINK_SHORT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GREEN_BLINK_SHORT" />

                    <RadioButton
                        android:id="@+id/rb_GREEN_BLINK_LOOP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GREEN_BLINK_LOOP" />

                    <RadioButton
                        android:id="@+id/rb_BLUE_ON_NORMAL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BLUE_ON_NORMAL" />

                    <RadioButton
                        android:id="@+id/rb_BLUE_OFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BLUE_OFF" />

                    <RadioButton
                        android:id="@+id/rb_BLUE_BLINK_SHORT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BLUE_BLINK_SHORT" />

                    <RadioButton
                        android:id="@+id/rb_BLUE_BLINK_LOOP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BLUE_BLINK_LOOP" />

                    <RadioButton
                        android:id="@+id/rb_ALL_OFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ALL_OFF" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:orientation="horizontal"
                >
                <RadioGroup
                    android:id="@+id/ir_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/rb_IR_ON"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="On" />

                    <RadioButton
                        android:id="@+id/rb_IR_OFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Off" />
                </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/bt_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/min_width"
                android:layout_gravity="center_horizontal"
                android:text="Test"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginBottom="50dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>